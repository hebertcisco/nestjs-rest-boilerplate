{
    "name": "nestjs-rest-boilerplate",
    "version": "0.0.1",
    "description": "Nestjs rest API boilerplate - Postgres | TypeORM | Throttler | with Auth Middleware and base to external integration with Outh2 APIS",
    "author": "Hebert Barros <hebert@hotbrains.com.br>",
    "private": true,
    "license": "UNLICENSED",
    "scripts": {
        "seed:config": "ts-node ./node_modules/typeorm-seeding/dist/cli.js config",
        "seed:run": "ts-node ./node_modules/typeorm-seeding/dist/cli.js seed",
        "schema:drop": "ts-node ./node_modules/typeorm/cli.js schema:drop",
        "schema:sync": "ts-node ./node_modules/typeorm/cli.js schema:sync",
        "setup": "cp .env.example .env",
        "typeorm": "ts-node -r tsconfig-paths/register ./node_modules/typeorm/cli.js",
        "typeorm:migration:run": "npm run typeorm -- migration:run",
        "pretypeorm": "ts-node -r tsconfig-paths/register src/scripts/write-type-orm-config.ts",
        "prebuild": "rimraf dist",
        "build": "nest build",
        "run:pm2": "pm2 start ts-node -- -P tsconfig.json ./src/main.ts",
        "doc": "npx @compodoc/compodoc -p tsconfig.json -s",
        "dev:test": "nodemon src/main.ts --debug --watch",
        "format": "prettier --write \"src/**/*.ts\" \"test/**/*.ts\"",
        "start": "nest start",
        "start:dev": "nest start --watch",
        "start:debug": "nest start --debug --watch",
        "start:prod": "node dist/main",
        "lint": "eslint \"{src,apps,libs,test}/**/*.ts\" --fix",
        "test": "jest",
        "test:watch": "jest --watch",
        "test:cov": "jest --coverage",
        "test:debug": "node --inspect-brk -r tsconfig-paths/register -r ts-node/register node_modules/.bin/jest --runInBand",
        "test:e2e": "jest --config ./test/jest-e2e.json",
        "git:ruf": "git reset --hard HEAD",
        "git:pull": "git pull",
        "kill:node": "kill -9 $(sudo lsof -t -i:3333)",
        "clear": "clear",
        "audit:fix": "npm audit fix",
        "prepare:enviroment": "node scripts/dev-enviroment.cjs",
        "prepostprepare:enviroment": "npm run pretypeorm"
    },
    "dependencies": {
        "@nestjs/common": "7.6.18",
        "@nestjs/core": "7.6.18",
        "@nestjs/mapped-types": "*",
        "@nestjs/platform-express": "7.6.18",
        "@nestjs/serve-static": "2.2.2",
        "@nestjs/swagger": "4.8.2",
        "@nestjs/throttler": "2.0.1",
        "@nestjs/typeorm": "7.1.5",
        "axios": "0.26.1",
        "bcryptjs": "2.4.3",
        "beautlog": "0.4.4",
        "body-parser": "1.20.0",
        "cache-manager": "3.6.1",
        "class-transformer": "0.5.1",
        "class-validator": "0.13.2",
        "compression": "1.7.4",
        "cors": "2.8.5",
        "dotenv": "16.0.0",
        "express": "4.17.3",
        "express-async-errors": "3.1.1",
        "helmet": "5.0.2",
        "http-status": "1.5.0",
        "jsonwebtoken": "8.5.1",
        "moment": "2.29.2",
        "mongoose": "6.2.10",
        "morgan": "1.10.0",
        "nestjs-pino-logger": "0.1.0",
        "pg": "8.7.1",
        "pgnode": "1.1.0",
        "pino": "6.14.0",
        "pino-http": "5.8.0",
        "qs": "6.10.3",
        "reflect-metadata": "0.1.13",
        "rimraf": "3.0.2",
        "rxjs": "7.5.5",
        "swagger-ui-express": "4.3.0",
        "tsyringe": "4.6.0",
        "typeorm": "0.2.41",
        "yup": "0.32.11"
    },
    "devDependencies": {
        "@babel/cli": "7.17.6",
        "@babel/core": "7.17.9",
        "@babel/node": "7.16.8",
        "@babel/preset-env": "7.16.11",
        "@compodoc/compodoc": "1.1.19",
        "@nestjs/cli": "7.6.0",
        "@nestjs/schematics": "8.0.10",
        "@nestjs/testing": "7.6.18",
        "@types/axios": "0.14.0",
        "@types/bcryptjs": "2.4.2",
        "@types/body-parser": "1.19.2",
        "@types/cache-manager": "3.4.3",
        "@types/compression": "1.7.2",
        "@types/cors": "2.8.12",
        "@types/dotenv": "8.2.0",
        "@types/express": "4.17.13",
        "@types/helmet": "0.0.48",
        "@types/jest": "27.4.1",
        "@types/jsonwebtoken": "8.5.8",
        "@types/moment": "2.13.0",
        "@types/mongoose": "5.11.97",
        "@types/morgan": "1.9.3",
        "@types/multer": "1.4.7",
        "@types/node": "16.11.26",
        "@types/pg": "8.6.4",
        "@types/supertest": "2.0.12",
        "@types/uuidv4": "5.0.0",
        "@types/yup": "0.29.13",
        "@typescript-eslint/eslint-plugin": "4.33.0",
        "@typescript-eslint/parser": "4.33.0",
        "@typescript-eslint/typescript-estree": "5.19.0",
        "eslint": "7.32.0",
        "eslint-config-airbnb-base": "15.0.0",
        "eslint-config-prettier": "8.5.0",
        "eslint-plugin-import": "2.25.4",
        "eslint-plugin-prettier": "4.0.0",
        "jest": "27.5.1",
        "nodemon": "2.0.15",
        "pm2": "5.2.0",
        "prettier": "2.6.2",
        "sucrase": "3.20.3",
        "supertest": "6.2.2",
        "ts-jest": "27.1.4",
        "ts-loader": "9.2.8",
        "ts-node": "9.1.1",
        "tsconfig-paths": "3.14.1",
        "typescript": "4.6.3"
    },
    "jest": {
        "moduleFileExtensions": [
            "js",
            "json",
            "ts"
        ],
        "rootDir": "src",
        "testRegex": ".*\\.spec\\.ts$",
        "transform": {
            "^.+\\.(t|j)s$": "ts-jest"
        },
        "collectCoverageFrom": [
            "**/*.(t|j)s"
        ],
        "coverageDirectory": "../coverage",
        "testEnvironment": "node"
    }
}
